<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/add_student_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Student"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/take_attendance_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Attendance"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add_student_button"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/view_absent_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Absent Students"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/take_attendance_button"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
